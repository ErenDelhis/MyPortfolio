
@model IEnumerable<MyPortfolio.Models.Ilgialani>
<!-- ======= Interests ======= -->
<div class="interests container">

    <div class="section-title">
        <h2>Interests</h2>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 mt-4">
                <div class="icon-box">
                    <i class="@item.Classadi" style="color: @item.Renkkodu;"></i>
                    <h3>@item.Ilgiadi</h3>
                </div>
            </div>
        }
    </div>

</div><!-- End Interests -->
